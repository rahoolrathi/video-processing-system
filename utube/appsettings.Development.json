{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UploadSettings": {
    "Path": "uploads",
    "MetadataPath": "metadata",
    "MaxFileSize": 5368709120,
    "AllowedExtensions": [ ".mp4", ".avi", ".mov", ".wmv", ".flv", ".webm", ".mkv" ],
    "ChunkTimeout": 300000
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://127.0.0.1:5500" ]
  }
}